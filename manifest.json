{
  "manifest_version": 2,
  "name": "V2PH downloader",
  "version": "1.0",

  "description": "Download albums from V2PH easily.",

  "icons": {
    "48": "icons/v2ph.svg",
    "96": "icons/v2ph.svg"
  },

  "content_scripts": [
    {
      "matches": ["*://www.v2ph.com/album/*"],
      "js": ["v2ph.js"]
    }
  ],

  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },

  "permissions": [
    "downloads"
  ]
}
